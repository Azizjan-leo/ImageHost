<div id="Desk">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Upload new work
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                @using (Html.BeginForm("CreateWork", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Upload new picture</h5>
                    </div>
                    <div class="modal-body">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="file" name="ImageFile" id="ImageFile" style="width: 100%;" required />
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CWVM.Title, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.CWVM.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CWVM.Description, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.CWVM.Description, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Upload" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Work list-->
    @foreach (var m in Model.Works)
    {
        <div class="card" style="width: 18rem; margin-left: 35%">
            
            <div class="card-body">
                <p class="center-block text-center">@m.Title</p>
                <img src="@Url.Content("~/Content/"+m.Image)" data-toggle="modal" data-target="#myModal" width="400" height="320" style="cursor: pointer;" class="card-img-top" alt="@m.Description">

                <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <p class="card-text text-center">@m.Title</p>
                            </div>
                            <div class="modal-body">
                                <img src="@Url.Content("~/Content/"+m.Image)" class="img-responsive">
                                <br />
                                <div>
                                    <p>
                                        @m.Description
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>